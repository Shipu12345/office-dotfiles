#!/bin/sh

#Requires graphicsmagick and feh
#
#Make sure to add 'kill $(pgrep -f path/to/script);' to your startup script before 'path/to/script &' to avoid weird flickering

### Variables ###
#Change these to your liking

morningtime=6
daytime=9
eveningtime=17
nighttime=20
morning='/home/shipu/wallpapers/sunrise.webp'
day='/home/shipu/wallpapers/day.webp'
evening='/home/shipu/wallpapers/sunset.webp'
night='/home/shipu/wallpapers/night.webp'

#DON'T TOUCH ANYTHING BELOW HERE
basecheck='true'
morningcheck='false'
daycheck='false'
eveningcheck='false'
nightcheck='false'

### Functions ###
checkmorning() {
	for i in {100..0}; do
		gm convert "$morning" -fill "#000"   jpg:- | feh --bg-scale --no-fehbg -
	done
	morningcheck='false'
	daycheck='true'
	basecheck='false'
}

checkday() {
	for i in {100..0}; do
		gm convert "$day" -fill "#000"   jpg:- | feh --bg-scale --no-fehbg -
	done
	daycheck='false'
	eveningcheck='true'
	basecheck='false'
}

checkevening() {
	for i in {100..0}; do
		gm convert "$evening" -fill "#000"  jpg:- | feh --bg-scale --no-fehbg -
	done
	eveningcheck='false'
	nightcheck='true'
	basecheck='false'
}

checknight() {
	for i in {100..0}; do
		gm convert "$night" -fill "#000"  jpg:- | feh --bg-scale --no-fehbg -
	done
	nightcheck='false'
	morningcheck='true'
	basecheck='false'
}

transmorning() {
	for i in {100..0}; do
		gm composite "$night" -dissolve "$i" "$morning" jpg:- | feh --bg-scale --no-fehbg -
	done
	morningcheck='false'
	daycheck='true'
}

transday() {
	for i in {100..0}; do
		gm composite "$morning" -dissolve "$i" "$day" jpg:- | feh --bg-scale --no-fehbg -
	done
	daycheck='false'
	eveningcheck='true'
}

transevening() {
	for i in {100..0}; do
		gm composite "$day" -dissolve "$i" "$evening" jpg:- | feh --bg-scale --no-fehbg -
	done
	eveningcheck='false'
	nightcheck='true'
}

transnight() {
	for i in {100..0}; do
		gm composite "$evening" -dissolve "$i" "$night" jpg:- | feh --bg-scale --no-fehbg -
	done
	nightcheck='false'
	morningcheck='true'
}

### Script ###
while :
do
	#Check time each loop
	time=$(date +%H)
	#Set wallpaper based on time on first run
	if [ "$basecheck" = "true" ]; then
		if [ $time -ge "$morningtime" ] && [ $time -lt "$daytime" ]; then
			checkmorning
		elif [ $time -ge "$daytime" ] && [ $time -lt "$eveningtime" ]; then
			checkday
		elif [ $time -ge "$eveningtime" ] && [ $time -lt "$nighttime" ]; then
			checkevening
		elif ([ $time -ge "$nighttime" ] && [ $time -le 23 ]) || ([ $time -ge 00 ] && [ $time -lt "$morningtime" ]); then
			checknight
		fi
	#Transition wallpaper based on time
	elif [ $time -ge "$morningtime" ] && [ $time -lt "$daytime" ] && [ "$morningcheck" = "true" ]; then
		transmorning
	elif [ $time -ge "$daytime" ] && [ $time -lt "$eveningtime" ] && [ "$daycheck" = "true" ]; then
		transday
	elif [ $time -ge "$eveningtime" ] && [ $time -lt "$nighttime" ] && [ "$eveningcheck" = "true" ]; then
		transevening
	elif ([ $time -ge "$nighttime" ] && [ $time -le 23 ]) || ([ $time -ge 00 ] && [ $time -lt "$morningtime" ])  && [ "$nightcheck" = "true" ]; then
		transnight
	fi
	sleep 10
done

